<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <% unless @user == current_user %>
    <%= link_to 'Invite to Friendship', "friendship/create/#{@user.id}", method: :post, class: 'profile-link' %>
  <% end %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
<p>Friend requests received from:</p><br>
<% current_user.friend_request_received.each do |frr| %>
  <ul>
    <li>
      <strong><%= frr.name %></strong>
      <button><%= link_to 'Accept', "friendship/accept/#{frr.id}", method: :post %></button>
      <button><%= link_to 'Reject', "friendship/reject/#{frr.id}", method: :post %></button>
    </li>
  </ul>
<% end %>
